@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

@{
	Layout = "masterTemplate.cshtml";
	var HomePage = Model.Root();

}


<!-- Title Bar -->
<div class="pbmit-title-bar-wrapper">
	<div class="container">
		<div class="pbmit-title-bar-content">
			<div class="pbmit-title-bar-content-inner">
				<div class="pbmit-tbar">
					<div class="pbmit-tbar-inner container">
						<h1 class="pbmit-tbar-title">@Model.Name</h1>
					</div>
				</div>
				<div class="pbmit-breadcrumb">
					<div class="pbmit-breadcrumb-inner">
						<span>
							<a title="" href="@HomePage.Url()" class="home"><span>@HomePage.Name</span></a>
						</span>
						<span class="sep"></span>
						<span><span class="post-root post post-post current-item">@Model.Name</span></span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Title Bar End-->

<div class="page-content">

	<!-- Portfolio Grid Col 3 -->
	<section class="section-md">
		<div class="container">
			<div class="row pbmit-element-posts-wrapper">


@{
	var selection = Umbraco.Content(Guid.Parse("7e538a0b-b7a5-4b56-b4b8-fccddc6439a3"))
    .ChildrenOfType("productCategory")
    .Where(x => x.IsVisible())
    .OrderBy(x => x.Name);
}

	@foreach (var item in selection)
	{

		var ProductCategoryImage = item.Value<MediaWithCrops>("productCategoryImage");
		<article class="pbmit-portfolio-style-1 col-md-6 col-lg-4">
					<div class="pbminfotech-post-content">
						<div class="pbminfotech-post-warpper">
							<div class="pbmit-featured-img-wrapper">
								<div class="pbmit-featured-wrapper">
									<img src="@ProductCategoryImage?.MediaUrl()" class="img-fluid" alt="@ProductCategoryImage?.Name">
								</div>
							</div>
							<a class="pbmit-link" href="@item.Url()"></a>
						</div>
						<div class="pbminfotech-box-content">
							<div class="pbminfotech-titlebox">
								<div class="pbmit-port-cat">
									<a href="@item.Url()" rel="tag">@item.Value("portfolioCategoryName")</a>
								</div>
								<h3 class="pbmit-portfolio-title">
									<a href="@item.Url()">@item.Value("productCategoryTitle")</a>
								</h3>
							</div>
						</div>
					</div>
				</article>
	}


			</div>
		</div>
	</section>
	<!-- Portfolio Grid Col 3 End -->

</div>